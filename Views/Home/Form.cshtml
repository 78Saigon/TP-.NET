@model TPLOCAL1.Models.FormModel

<!DOCTYPE html>

<html>

    <head>
        <title>Formulaire</title>
        <link rel="stylesheet" href="~/resources/Index.css" />
    </head>


    <body>

        <header>
            <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />        
            <h1>Formulaire TP HN avis</h1>
        </header>
              
        <nav>
            <ul>
                <li><a href="/Home">Accueil</a></li>
                <li><a href="/Home/Index/OpinionList">Liste avis</a></li>
            </ul>
        </nav>

        <section>
                       
            <form action="/Home/ValidationFormulaire"
                  method="post">


                <table>
                    <caption>Informations personelles</caption>
                    <tr>
                        <td>Nom</td>
                        <td><input asp-for="LastName" type="text" /> <span asp-validation-for="LastName" class="erreur" ></span> </td>                   
                        
                    </tr>
                    <tr>
                        <td>Prénom</td>
                        <td><input asp-for="FirstName" type="text" /> <span asp-validation-for="FirstName" class="erreur"></span></td>
                    </tr>
                    <tr>
                        <td>Genre</td>
                    <td class="genre">
                        <select asp-for="Genre">                            
                            <option value="">Sélectionner un genre</option>
                                <option value="Homme">Homme</option>
                                <option value="Femme">Femme</option>
                                <option value="Autre">Autre</option>                            
                         </select>
                         <span asp-validation-for="Genre" class="erreur"></span>
                    </td>
                    </tr>
                    <tr>
                        <td>Adresse</td>
                        <td><input type="text" asp-for="Adresse" />
                        <span asp-validation-for="Adresse" class="erreur"></span> </td>                        

                    </tr>
                    <tr>
                        <td>Code postal</td>
                        <td>
                        <input type="text" asp-for="Postal" />  <span asp-validation-for="Postal" class="erreur"></span> </td>               
                                        
                    </tr>
                    <tr>
                        <td>Ville</td>
                        <td><input type="text" asp-for="Ville" /> <span asp-validation-for="Ville" class="erreur"></span> </td>
                    </tr>
                    <tr>
                        <td>Adresse e-mail</td>
                        <td><input type="email" asp-for="Mail" /> <span asp-validation-for="Mail" class="erreur"></span> </td>
                     
                    </tr>

                </table>

                <table>
                <caption>Informations formation suivie</caption>
                    <tr>
                        <td>Date début formation</td>
                        <td>
                            <input type="date"     
                               asp-for="DateFormation"
                               max="2021-01-01" />
                            <span asp-validation-for="DateFormation" class="erreur"></span>
                        </td>

                    </tr>
                    <tr>
                        <td>Formation suivie</td>
                        <td>
                            <select asp-for="Formation">
                                <option value="">Sélectionner un cours</option>
                                <option value="Cobol">Formation Cobol</option>
                                <option value="Objet">Formation par objet</option>
                                <option value="Double compétence">Formaton à double compétence</option>
                            </select>
                            <span asp-validation-for="Formation" class="erreur"></span>
                        </td>
                    </tr>                
                </table>
                                  
                <table>
                    <caption>Avis formation</caption>
                                                  
                    <tr>
                        <td>Formation Cobol</td>
                        <td><input type="text" name="AvisCobol" value="" /></td>

                    </tr>
                    <tr>
                        <td>Formation C#</td>
                        <td><input type="text" name="AvisCS" value="" /></td>
                    </tr>                 
                              
                </table>

                <input type="submit" value="Valider" />

            </form>
           
        </section>  

    

    </body>

</html>